@article{ WOS:000787115600001,
Author = {Gal, Iddo and Geiger, Vince},
Title = {Welcome to the era of vague news: a study of the demands of statistical
   and mathematical products in the COVID-19 pandemic media},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
Year = {2022},
