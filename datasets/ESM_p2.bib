@article{ WOS:000532865200001,
Author = {Scheiner, Thorsten},
Title = {Dealing with opposing theoretical perspectives: knowledge in structures
   or knowledge in pieces?},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
