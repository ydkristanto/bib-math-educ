@article{ WOS:000707515300001,
Author = {Cevikbas, Mustafa and Kaiser, Gabriele and Schukajlow, Stanislaw},
Title = {A systematic literature review of the current discussion on mathematical
   modelling competencies: state-of-the-art developments in
   conceptualizing, measuring, and fostering},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
Year = {2022},
Volume = {109},
