@article{ WOS:000832798500002,
Author = {Bofferding, Laura and Aqazade, Mahtob},
Title = {``Where does the square go?{''}: reinterpreting shapes when solving a
   tangram puzzle},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
