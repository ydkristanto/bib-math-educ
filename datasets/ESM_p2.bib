@article{ WOS:000207960000005,
Author = {Furinghetti, Fulvia and Morselli, Francesca},
Title = {Every unsuccessful problem solver is unsuccessful in his or her own way:
   affective and cognitive factors in proving},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
Year = {2009},
Volume = {70},
Number = {1},
Pages = {71-90},
Month = {JAN},
Abstract = {It is widely recognized that purely cognitive behavior is extremely rare
   in performing mathematical activity: other factors, such as the
   affective ones, play a crucial role. In light of this observation, we
   present a reflection on the presence of affective and cognitive factors
   in the process of proving. Proof is considered as a special case of
   problem solving and the proving process is studied adopting a
   perspective according to which both affective and cognitive factors
   influence it. To carry out our study, we set up a framework where
   theoretical tools coming from research on problem solving, proof and
   affect are present. The study is performed within a university course in
   mathematics education, where students were given a statement in
   elementary number theory to be proved and were asked to write down their
   proving process and the thoughts that accompanied this process. We
   scrutinize the written protocols of two unsuccessful students, with the
   aim of disentangling the intertwining between affect and cognition. In
