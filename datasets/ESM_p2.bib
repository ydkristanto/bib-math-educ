@article{ WOS:000591940900001,
Author = {Voica, Cristian and Singer, Florence Mihaela and Stan, Emil},
Title = {How are motivation and self-efficacy interacting in problem-solving and
   problem-posing?},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
