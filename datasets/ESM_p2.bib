@article{ WOS:000293757700001,
Author = {Wawro, Megan and Sweeney, George F. and Rabin, Jeffrey M.},
Title = {Subspace in linear algebra: investigating students' concept images and
   interactions with the formal definition},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
