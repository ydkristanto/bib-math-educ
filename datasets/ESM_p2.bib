@article{ WOS:000460433700004,
Author = {Lepola, Janne and Hannula-Sormunen, Minna},
Title = {Spontaneous focusing on numerosity and motivational orientations as
   predictors of arithmetical skills from kindergarten to grade 2},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
Year = {2019},
