@article{ WOS:000687005000001,
Author = {Meaney, Tamsin and Fyhn, A. B. and Graham, S. R. W.},
Title = {Unfettering discussions about social justice: the role of conversational
   prompts in discussions about mathematics education for Indigenous
   students},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
