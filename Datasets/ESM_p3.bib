@article{ WOS:000369536800002,
Author = {Scheiner, Thorsten},
Title = {New light on old horizon: Constructing mathematical concepts, underlying
   abstraction processes, and sense making strategies},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
