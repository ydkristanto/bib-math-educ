@article{ WOS:000349368500005,
Author = {Noll, Jennifer and Hancock, Stacey},
Title = {Proper and paradigmatic metonymy as a lens for characterizing student
   conceptions of distributions and sampling},
Journal = {EDUCATIONAL STUDIES IN MATHEMATICS},
